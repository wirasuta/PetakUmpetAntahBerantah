<Page x:Class="WpfApp1.PlayerGraph"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp1"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PlayerGraph">

    <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
        <Canvas x:Name="P_Canvas" Background="#FFE6E6E6" Width="10000" Height="500000">
            <Button x:Name="startQuery" Content="QUERY" Width="75" Canvas.Left="518" Canvas.Top="10" Click="querySolution" FontFamily="Bebas Neue Bold" IsEnabled="False"/>
            <Button x:Name="back" Content="BACK" Width="75" Canvas.Left="598" Canvas.Top="10" Click="backTo" FontFamily="Bebas Neue Bold" Background="#FFFFDF16" Foreground="#FF151313" BorderBrush="#FF151313"/>
            <Button x:Name="backToMain" Content="MAIN" Width="75" Canvas.Left="678" Canvas.Top="10" Click="backToMainMenu" FontFamily="Bebas Neue Bold" Background="#FF151313" Foreground="#FF25FDB8"/>

        </Canvas>
    </ScrollViewer>
</Page>
